<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
    <!-- - sign will take the nav.ejs file -->
    <div class="blogs content">
      <h2>All Blogs</h2>
      <% if (blogs.length > 0) { %> 
        <% blogs.forEach(blog => { %>
          <a href="/blogs/<%= blog._id %>" class="single">
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippets"><%= blog.snippet %></p>
          </a>
      <% }) %> 
      <% } else {%>
      <p>There is no blogs to display...</p>
      <% }%>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>